  <script>
    let isMuted=false;
    const bgMusic=document.getElementById('bgMusic');
    const toggleBtn=document.getElementById('musicToggle');
    toggleBtn.addEventListener('click',()=>{
      isMuted=!isMuted;
      bgMusic.src = isMuted 
        ? 'https://www.youtube.com/embed/ZpsKr_Ng6vk?autoplay=1&loop=1&playlist=ZpsKr_Ng6vk&mute=1'
        : 'https://www.youtube.com/embed/ZpsKr_Ng6vk?autoplay=1&loop=1&playlist=ZpsKr_Ng6vk&mute=0';
      toggleBtn.textContent = isMuted ? 'ðŸ”‡' : 'ðŸ”Š';
    });

    window.addEventListener('load', ()=>{
      setTimeout(()=>{
        const boot = document.getElementById('boot');
        boot.classList.add('fadeOut');
        setTimeout(()=>{ boot.style.display='none'; document.getElementById('main').style.display='flex'; }, 650);
      }, 1800);
    });

    const specialName='kainat';
    const showBtn=document.getElementById('showBtn');
    const input=document.getElementById('nameInput');
    const result=document.getElementById('result');

    showBtn.addEventListener('click',generate);
    input.addEventListener('keydown',(e)=>{ if(e.key==='Enter') generate(); });

    function generate(){
      const name=input.value.trim();
      if(!name){ result.innerText="Pehle naam likho (Enter a name)."; return }
      result.innerHTML='';
      if(name.toLowerCase()===specialName){
        typeText(specialApology());
      } else {
        result.innerHTML=`<strong>Sorry, it's not for you.</strong>`;
      }
    }

    function typeText(paragraphs){
      let lines=paragraphs.split('\n');
      let i=0;
      function typeLine(){
        if(i>=lines.length) return;
        let span=document.createElement('span');
        span.className='typing-line';
        result.appendChild(span);
        let line=lines[i];
        let j=0;
        function typeChar(){
          if(j<line.length){
            span.innerHTML+=line[j];
            j++;
            setTimeout(typeChar,25);
          } else { i++; result.appendChild(document.createElement('br')); setTimeout(typeLine,80); }
        }
        typeChar();
      }
      typeLine();
    }

