  <title>I'm Sorry App</title>
  <style>
    :root{--bg:#0b0b0f;--card:#0f1724;--accent:#ff6b81;--muted:#9aa4b2}
    html,body{height:100%;margin:0;font-family:Inter, system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial}
    body{background:linear-gradient(180deg,#02040a 0%, #071026 100%);display:flex;align-items:center;justify-content:center;padding:20px;color:#e6eef8;overflow:hidden}
    .app{width:100%;max-width:760px;background:rgba(255,255,255,0.03);border-radius:12px;box-shadow:0 10px 30px rgba(2,6,23,0.7);overflow:hidden;position:relative}
    .boot{height:320px;display:flex;align-items:center;justify-content:center;flex-direction:column;padding:30px;text-align:center}
    .logo{font-size:40px;font-weight:700;letter-spacing:2px;color:var(--accent);opacity:0;transform:translateY(10px);animation:logoIn 1s forwards}
    .sub{margin-top:10px;color:var(--muted);opacity:0;transform:translateY(6px);animation:subIn 1s 0.25s forwards}
    @keyframes logoIn{to{opacity:1;transform:none}}@keyframes subIn{to{opacity:1;transform:none}}
    .main{padding:28px;display:none;flex-direction:column;gap:16px}
    .row{display:flex;gap:12px;align-items:center}
    input[type=text]{flex:1;padding:12px 14px;border-radius:10px;border:1px solid rgba(255,255,255,0.06);background:rgba(255,255,255,0.02);color:inherit;font-size:16px}
    button{padding:11px 16px;border-radius:10px;border:0;background:linear-gradient(90deg,var(--accent),#ff9aa2);color:white;font-weight:600;cursor:pointer}
    .result{margin-top:18px;white-space:pre-wrap;background:linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));padding:18px;border-radius:10px;border:1px solid rgba(255,255,255,0.03);max-height:60vh;overflow:auto;font-size:16px;line-height:1.6}
    .small{font-size:13px;color:var(--muted)}
    .fadeOut{animation:fadeOut 0.6s forwards} @keyframes fadeOut{to{opacity:0;transform:translateY(-8px);height:0}}
    .center{display:flex;align-items:center;justify-content:center}
    .typing-line{display:block;}
    .music-controls{position:absolute;top:12px;right:12px;color:white;font-size:18px;cursor:pointer;user-select:none;background:rgba(0,0,0,0.3);padding:6px 10px;border-radius:6px;}
  </style>
</head>
<body>
  <div class="app">
    <div class="boot" id="boot">
      <div class="logo">Iâ€™m Sorry</div>
